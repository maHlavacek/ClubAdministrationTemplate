@page
@model ClubAdministration.Web.Pages.Members.EditModel

@{
    ViewData["Title"] = "Edit Member";
}

<h2>Edit Member</h2>

<hr />
<form method="post">
    <div class="form-group">
        <input asp-for="@Model.Member.Id" type="hidden" />
        <label asp-for="@Model.Member.FirstName" class="control-label"></label>
        <input asp-for="@Model.Member.FirstName" class="form-control" />
        <span asp-validation-for="Member.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Member.LastName" class="control-label"></label>
        <input asp-for="@Model.Member.LastName" class="form-control" />
        <span asp-validation-for="Member.LastName" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Save" />
    </div>
</form>
<div>
    <a asp-page="/Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
